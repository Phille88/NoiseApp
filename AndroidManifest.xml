            android:name="be.kuleuven.noiseapp.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.kuleuven.noiseapp.RandomRecordActivity"
            android:label="@string/title_activity_random_record" >
        </activity>
        <activity
            android:name="be.kuleuven.noiseapp.SoundBattleActivity"
            android:label="@string/title_activity_sound_battle" >
        </activity>
