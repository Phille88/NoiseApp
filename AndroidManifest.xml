            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.kuleuven.noiseapp.RandomRecordActivity" />
        </activity>
        <activity
            android:name="be.kuleuven.noiseapp.SoundBattleRecordActivity"
            android:label="@string/title_activity_sound_battle_record"
            android:parentActivityName="be.kuleuven.noiseapp.SoundBattleActivity" >
