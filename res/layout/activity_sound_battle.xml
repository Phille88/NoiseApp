<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SoundBattleActivity" >

    <TextView
        android:id="@+id/txt_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/size_txt_title"
        android:textStyle="bold"
        android:text="@string/txt_sound_battle_challenge" />

    <Button
        android:id="@+id/btn_challenge_facebook_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_challenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/img_btn_challenge_facebook_friend_states"
        android:contentDescription="@string/txt_content_challenge_facebook_friend"
        android:text="@string/txt_btn_challenge_facebook_friend"
        android:textColor="#000000"
        android:textStyle="bold" />
     <Button
        android:id="@+id/btn_challenge_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_challenge_facebook_friend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/img_btn_challenge_random_states"
        android:contentDescription="@string/txt_content_challenge_random"
        android:text="@string/txt_btn_challenge_random"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>