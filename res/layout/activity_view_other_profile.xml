<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_other_profile_picture"
        android:contentDescription="@string/txt_desc_img_other_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_other_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_other_profile_picture"
        android:text="@string/txt_other_username"
        android:textSize="@dimen/size_txt_username"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tbl_other_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_other_profile_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/txt_other_points_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_other_points_earned"
                android:textSize="@dimen/size_txt_normal" />

            <TextView
                android:id="@+id/txt_other_points_earned_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/txt_other_points_earned_username"
                android:textSize="@dimen/size_txt_normal" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/txt_other_battles_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_other_battles_won"
                android:textSize="@dimen/size_txt_normal" />

            <TextView
                android:id="@+id/txt_other_battles_won_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/txt_other_battles_won_username"
                android:textSize="@dimen/size_txt_normal" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/txt_mayorships"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_other_mayorships"
                android:textSize="@dimen/size_txt_normal" />

            <TextView
                android:id="@+id/txt_other_mayorships_amount_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/txt_other_mayorships_amount_username"
                android:textSize="@dimen/size_txt_normal" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/txt_other_mayorships_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_other_mayorships_username" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow5_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/txt_other_badges_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_other_badges_earned"
                android:textSize="@dimen/size_txt_normal" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tbl_other_badges_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >
       		<ImageView
                android:id="@+id/img_other_badge_newbie"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/txt_content_badge_newbie"
                android:src="@drawable/img_badge_newbie" />

            <ImageView
                android:id="@+id/img_other_badge_first_sound_battle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/txt_content_badge_first_sound_battle"
                android:src="@drawable/img_badge_first_sound_battle" />
            </TableRow>
    </TableLayout>
