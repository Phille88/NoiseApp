<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_sound_battle_points"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#AA000000"
    android:orientation="vertical"
    android:weightSum="1.0" >

<RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical" 
     android:layout_centerVertical="true"
     android:layout_centerHorizontal="true"
     android:layout_margin="20dp"
    android:background="#AA000000">
     
    <TextView
        android:id="@+id/txt_badge_first_sound_battle_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="@string/txt_badge_first_sound_battle_description"
        android:textSize="@dimen/size_txt_popup_title"
        android:textStyle="bold" />
    
      <ImageView
          android:id="@+id/img_badge_first_sound_battle"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txt_badge_first_sound_battle_description"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="20dp"
          android:src="@drawable/img_badge_first_sound_battle" 
          android:contentDescription="@string/txt_content_badge_first_sound_battle"/>
      
      <TextView
          android:id="@+id/txt_badge_first_sound_battle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/img_badge_first_sound_battle"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="0dp"
          android:gravity="center"
          android:text="@string/txt_badge_first_sound_battle"
          android:textColor="#ffcc00"
          android:textSize="@dimen/size_txt_popup_text"
          android:textStyle="bold" />
      
       <Button
       	   android:id="@+id/btn_share_on_facebook"
	       android:layout_width="50dp"
	       android:layout_height="50dp"
	       android:layout_alignParentLeft="true"
	       android:layout_below="@+id/txt_badge_first_sound_battle"
	       android:layout_marginTop="10dp"
	       android:background="@drawable/img_btn_share_on_facebook"
	       android:contentDescription="@string/txt_content_share_on_facebook"
	       android:textStyle="bold" 
	       android:textColor="#000000" />

      <ImageButton
          android:id="@+id/btn_popup_sound_battle_points_ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/txt_badge_first_sound_battle"
          android:layout_marginTop="10dp"
          android:background="@drawable/img_btn_ok_states"
          android:contentDescription="@string/txt_content_ok"/>

  </RelativeLayout>
</RelativeLayout>